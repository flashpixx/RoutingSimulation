<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" elementFormDefault="qualified"
    vc:minVersion="1.1">

    <!--  
        https://www.data2type.de/xml-xslt-xslfo/xml-schema/definition-von-eindeutigkeit-s/id-im-vergleich-mit-xs-key/ 
        http://4webmaster.de/wiki/XML-Schema
        https://jaxb.java.net/tutorial/section_2_2_15-Referring-to-Another-XML-Element.html
    -->

    <xs:element name="structure">
        <xs:complexType>
            <xs:all>
                <xs:element maxOccurs="1" minOccurs="1" name="configuration" type="iconfiguration"> </xs:element>
                <xs:element name="character">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="pokemon">
                                <xs:complexType>
                                    <xs:complexContent>
                                        <xs:extension base="ipokemon">
                                            <xs:attribute name="name" type="xs:string"
                                                use="required"/>
                                        </xs:extension>
                                    </xs:complexContent>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:all>
        </xs:complexType>
    </xs:element>

    <xs:attributeGroup name="ivaluetriple">
        <xs:annotation>
            <xs:documentation>attribute triple for distribution structure</xs:documentation>
        </xs:annotation>
        <xs:attribute name="maximum" type="xs:double" use="required"/>
        <xs:attribute name="minimum" type="xs:double" use="required"/>
        <xs:attribute name="expectedvalue" type="xs:double" use="required"/>
    </xs:attributeGroup>

    <xs:complexType name="iconfiguration" final="#all">
        <xs:annotation>
            <xs:documentation>abstract definition of the configuration</xs:documentation>
        </xs:annotation>
        <xs:all>
            <xs:element name="ethnicity" minOccurs="1">
                <xs:complexType>
                    <xs:sequence minOccurs="1">
                        <xs:element maxOccurs="unbounded" minOccurs="1" name="item"
                            type="iconfigurationitem"> </xs:element>
                    </xs:sequence>
                </xs:complexType>
                <xs:key id="keyethnicity" name="keyethnicity">
                    <xs:selector xpath="item"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
            <xs:element name="motivation">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="unbounded" minOccurs="1" name="item"
                            type="iconfigurationitem"> </xs:element>
                    </xs:sequence>
                </xs:complexType>
                <xs:key name="keymotivation">
                    <xs:selector xpath="item"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
            <xs:element name="attack">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="unbounded" minOccurs="1" name="item">
                            <xs:complexType mixed="false">
                                <xs:complexContent>
                                    <xs:extension base="iattack">
                                        <xs:attribute name="id"/>
                                        <xs:attribute name="distance">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:double">
                                                  <xs:minExclusive value="0"/>
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:attribute>
                                        <xs:attribute name="cost">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:double">
                                                  <xs:minExclusive value="0"/>
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:attribute>
                                    </xs:extension>
                                </xs:complexContent>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
                <xs:key name="keyattack">
                    <xs:selector xpath="item"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
            <xs:element name="attribute">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="item" maxOccurs="unbounded" minOccurs="1">
                            <xs:complexType>
                                <xs:complexContent>
                                    <xs:extension base="iconfigurationitem">
                                        <xs:sequence>
                                            <xs:element maxOccurs="1" minOccurs="1" name="access">
                                                <xs:simpleType>
                                                  <xs:restriction base="xs:string">
                                                  <xs:enumeration value="read"/>
                                                  <xs:enumeration value="write"/>
                                                  </xs:restriction>
                                                </xs:simpleType>
                                            </xs:element>
                                        </xs:sequence>
                                    </xs:extension>
                                </xs:complexContent>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
                <xs:key name="keyattribute">
                    <xs:selector xpath="item"/>
                    <xs:field xpath="@id"/>
                </xs:key>
            </xs:element>
        </xs:all>
    </xs:complexType>
    <xs:complexType final="restriction" name="ipokemon">
        <xs:annotation>
            <xs:documentation>abstract definition of s single pokemon character</xs:documentation>
        </xs:annotation>
        <xs:sequence maxOccurs="unbounded" minOccurs="1">
            <xs:element name="generation">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="ethnicity">
                            <xs:complexType>
                                <xs:attribute name="id" use="required"/>
                                <xs:attributeGroup ref="ivaluetriple"/>
                            </xs:complexType>
                        </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="attribute">
                            <xs:complexType>
                                <xs:attribute name="id" use="required"/>
                                <xs:attributeGroup ref="ivaluetriple"/>
                            </xs:complexType>
                        </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="motivation">
                            <xs:complexType>
                                <xs:attribute name="id" use="required"/>
                                <xs:attributeGroup ref="ivaluetriple"/>
                            </xs:complexType>
                        </xs:element>
                        <xs:element name="attack" maxOccurs="unbounded" minOccurs="0">
                            <xs:complexType>
                                <xs:attribute name="id"/>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
                <xs:keyref name="newKeyref" refer="keyethnicity">
                    <xs:selector xpath="ethnicity"/>
                    <xs:field xpath="@id"/>
                </xs:keyref>
                <xs:unique name="uniqueethnicity">
                    <xs:selector xpath="ethnicity"/>
                    <xs:field xpath="@id"/>
                </xs:unique>
                <xs:unique name="uniqueattribute">
                    <xs:selector xpath="attribute"/>
                    <xs:field xpath="@id"/>
                </xs:unique>
                <xs:unique name="uniquemotivation">
                    <xs:selector xpath="motivation"/>
                    <xs:field xpath="@id"/>
                </xs:unique>
                <xs:unique name="uniqueattack">
                    <xs:selector xpath="attack"/>
                    <xs:field xpath="@id"/>
                </xs:unique>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="iattack" abstract="true" final="restriction">
        <xs:annotation>
            <xs:documentation>abstract attack definition</xs:documentation>
        </xs:annotation>
        <xs:all>
            <xs:element maxOccurs="unbounded" minOccurs="1" name="damage">
                <xs:complexType>
                    <xs:attribute name="id" use="required"/>
                    <xs:attribute name="value" use="required">
                        <xs:simpleType>
                            <xs:restriction base="xs:double">
                                <xs:minExclusive value="0"/>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:attribute>
                </xs:complexType>
                <xs:keyref name="refattribute" refer="keyattribute">
                    <xs:selector xpath="."/>
                    <xs:field xpath="@id"/>
                </xs:keyref>
            </xs:element>
        </xs:all>
    </xs:complexType>

    <xs:complexType name="iconfigurationitem">
        <xs:annotation>
            <xs:documentation>abstract definition of a configuration element</xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" use="required"/>
    </xs:complexType>
</xs:schema>
